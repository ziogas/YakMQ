{
  "name": "yakmq",
  "packageManager": "yarn@4.3.1",
  "engines": {
    "node": ">=20"
  },
  "version": "1.0.0",
  "description": "BullMQ based jobs/tasks queue system",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "docker-prod-prune": "node yarn-prune.js",
    "start": "yarn prod",
    "prod": "concurrently --kill-others -n api,workers -c green,blue \"yarn prod:api\" \"yarn prod:workers\"",
    "prod:api": "node --env-file=.env --env-file=.env.production dist/api/index.js",
    "prod:workers": "node --env-file=.env --env-file=.env.production dist/workers/index.js",
    "dev": "concurrently --kill-others -n api,workers -c green,blue \"yarn dev:api\" \"yarn dev:workers\"",
    "dev:api": "tsx --env-file=.env --env-file=.env.development --watch src/api/index.ts",
    "dev:workers": "tsc --noEmit && tsx --env-file=.env --env-file=.env.development --watch src/workers/index.ts",
    "test": "echo '\n\n>>> ensure you have a running redis server locally <<<\n\n' && jest"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.5.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-router": "^7.4.8",
    "@types/node": "^20.14.10",
    "@types/supertest": "^6.0.2",
    "concurrently": "^8.2.2",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.3",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@bull-board/koa": "^5.21.0",
    "@koa/bodyparser": "^5.1.1",
    "bullmq": "^5.8.7",
    "fast-glob": "^3.3.2",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.15.3",
    "koa-jwt": "^4.0.4",
    "koa-router": "^12.0.1"
  }
}
